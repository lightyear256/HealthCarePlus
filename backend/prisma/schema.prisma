generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               Int              @id @default(autoincrement())
  name             String
  email            String           @unique
  role             Role             @default(PATIENT)
  createdAt        DateTime         @default(now())
  password         String
  age              String
  phoneno          String
  summaries        AutoSummary[]
  patientRequests  PatientRequest[] @relation("PatientRequests")
  assignedRequests PatientRequest[] @relation("VolunteerAssignments")
  messages         RequestMessage[]
  chatSessions     ChatSession[]
}

model PatientRequest {
  id          Int              @id @default(autoincrement())
  name        String
  age         String
  email       String
  phone       String?
  title       String
  issue       String
  status      RequestStatus    @default(PENDING)
  createdAt   DateTime         @default(now())
  userId      Int
  volunteerId Int?
  autoSummary AutoSummary?
  user        User             @relation("PatientRequests", fields: [userId], references: [id], onDelete: Cascade)
  volunteer   User?            @relation("VolunteerAssignments", fields: [volunteerId], references: [id])
  messages    RequestMessage[]
}

model AutoSummary {
  id               Int            @id @default(autoincrement())
  content          String
  generatedByAI    Boolean        @default(true)
  createdAt        DateTime       @default(now())
  userId           Int?
  patientRequestId Int            @unique
  patientRequest   PatientRequest @relation(fields: [patientRequestId], references: [id], onDelete: Cascade)
  user             User?          @relation(fields: [userId], references: [id])
}

model RequestMessage {
  id         Int            @id @default(autoincrement())
  content    String
  sender     MessageSender
  createdAt  DateTime       @default(now())
  requestId  Int
  senderId   Int
  isRead     Boolean        @default(false)
  request    PatientRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  senderUser User           @relation(fields: [senderId], references: [id])

  @@index([requestId])
  @@index([senderId])
}

model ChatSession {
  id          String        @id @default(uuid())
  title       String
  userId      Int
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  isActive    Boolean       @default(true)
  context     Json?
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages    ChatMessage[]

  @@index([userId])
  @@index([createdAt])
}

model ChatMessage {
  id          Int         @id @default(autoincrement())
  sessionId   String
  role        MessageRole
  content     String      @db.Text
  createdAt   DateTime    @default(now())
  metadata    Json?
  isEmergency Boolean     @default(false)
  session     ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([createdAt])
}

enum Role {
  PATIENT
  ADMIN
  VOLUNTEER
}

enum RequestStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  CANCELLED
}

enum MessageSender {
  PATIENT
  VOLUNTEER
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}